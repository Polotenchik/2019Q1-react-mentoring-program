{   
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": "error",
        "max-len": [
            1,
            120,
            2,
            {
                "ignoreComments": true
            }
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },
    "extends": [
        "airbnb-base"
    ],
    "plugins": [
        "import",
        "react",
        "jsx-a11y"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "document": false
    }
}
